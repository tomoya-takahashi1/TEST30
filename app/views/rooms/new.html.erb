<header>        
<%= render "shared/header" %>
</header>
<%= render "shared/error", obj: @room %> 
<div class = "form-container container">
  <h4>施設の新規追加</h4>

  <%= form_with model:@room, class: "row g-3" do |f|%>
    <div class = "col-12">
      <%= f.label :name,"施設名" ,class: "form-label"%>
      <%= f.text_field :name, class:"form-control"%>
    </div>
    <div class = "col-12">
      <%= f.label :address,"住所",class: "form-label"%>
      <%= f.text_field :address , class:"form-control"%>
    </div>
    <div class = "col-12">
      <%= f.label :introduction,"施設詳細",class: "form-label"%>
      <%= f.text_area :introduction , class:"form-control"%>
    </div>
    <div class = "col-12">
      <%= f.label :price,"価格",class: "form-label"%>
      <%= f.text_field :price , class:"form-control"%>
    </div>
    <div class = "col-12">
      <%= f.label :image,"イメージ画像",class: "form-label"%>
      <%= f.file_field :image , class:"form-control"%>
    </div>
    
    <div class = "w-100 mt-2 pr-3 d-flex justify-content-end">
      <a href = "/rooms/own"><button type = "button" class="btn btn-secondary">キャンセル</button></a>
      <%= f.submit "保存", class:"btn btn-primary ml-1"%>
      
    </div>
  </form>
 
</div>
<% end %>